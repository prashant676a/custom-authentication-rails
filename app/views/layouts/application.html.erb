<!DOCTYPE html>
<html>
  <head>
    <title>SessionAuthentication</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div class="alert alert-<%= type %>">
        <%= msg %>
      </div>
    <% end %>


    <%= yield %>
    <hr>
    <% if user_signed_in? %>
      <%= link_to 'Sign Out', session_path(current_user.id), class: 'sign_out', data: { turbo_method: :delete } %>
    <% end %>

  </body>
</html>
